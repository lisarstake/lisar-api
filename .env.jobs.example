# =================================
# BACKGROUND JOBS CONFIGURATION
# =================================

# Enable or disable background jobs (set to 'false' to disable)
ENABLE_JOBS=true

# Timezone for job scheduling (default: UTC)
# Examples: America/New_York, Europe/London, Asia/Tokyo
JOB_TIMEZONE=UTC

# Cron schedule for daily rewards notification
# Default: 0 9 * * * (Every day at 9:00 AM)
# Format: minute hour day month weekday
DAILY_REWARDS_CRON=0 9 * * *

# Cron schedule for weekly rewards notification
# Default: 0 10 * * 1 (Every Monday at 10:00 AM)
WEEKLY_REWARDS_CRON=0 10 * * 1

# Cron schedule for monthly rewards notification
# Default: 0 11 1 * * (First day of every month at 11:00 AM)
MONTHLY_REWARDS_CRON=0 11 1 * *

# =================================
# CRON SCHEDULE EXAMPLES
# =================================
# Every hour: 0 * * * *
# Every day at midnight: 0 0 * * *
# Every Monday at 9 AM: 0 9 * * 1
# Every 15 minutes: */15 * * * *
# First day of month: 0 0 1 * *
# =================================
